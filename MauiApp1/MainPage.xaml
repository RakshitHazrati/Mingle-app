<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://schemas.microsoft.com/dotnet/2021/maui/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="MauiApp1.MainPage"
             BackgroundColor="{DynamicResource PageBackgroundColor}">

    <StackLayout VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand" Padding="20">
        <Image Source="homeimg.jpeg" VerticalOptions="Start" HorizontalOptions="CenterAndExpand" HeightRequest="200"/>
        <Label Text="Mingle" HorizontalOptions="CenterAndExpand" VerticalOptions="StartAndExpand" FontSize="20" Margin="0,50,0,0"/>
        <Label Text="Please enter your phone number:" HorizontalOptions="CenterAndExpand" VerticalOptions="StartAndExpand" TextColor="Gray" Margin="0,160,0,0" FontSize="18"/>

        <Entry x:Name="enteredPhoneNumber" Placeholder="Enter your phone number" Keyboard="Telephone" MaxLength="10" Margin="0,0,0,0"/>
        <Button Text="Sign Up" Clicked="OnSignUpClicked" Margin="0,20,0,0"/>
    </StackLayout>

</ContentPage>
