<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://schemas.microsoft.com/dotnet/2021/maui/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="MauiApp1.LogIn"
             BackgroundColor="{DynamicResource PageBackgroundColor}">
    
    <StackLayout Padding="20,0,20,0" Spacing="10">

        <Image Source="logo.png" VerticalOptions="Start" HorizontalOptions="CenterAndExpand" HeightRequest="200"/>
        
        <!-- Header with Sign In and Sign Up -->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Button Grid.Column="0" Text="Sign In" FontSize="Medium" FontAttributes="Bold" BackgroundColor="#409fa8b5" TextColor="#8A2BE2" Margin="0,0,10,0" />
            <Button Grid.Column="1" Text="Sign Up" FontSize="Medium" BackgroundColor="Transparent" TextColor="#8A2BE2" Margin="10,0,0,0" Clicked="SwichToSignUp"/>

            <BoxView Grid.ColumnSpan="2" HeightRequest="2" BackgroundColor="#8A2BE2" VerticalOptions="End"/>
        </Grid>


        <!-- Email Entry -->
        <Border Stroke="#8A2BE2" StrokeThickness="1" Padding="0" HeightRequest="40" Margin="0,30,0,10" >
            <Entry Placeholder="Enter your email" Text="" x:Name="enteredEmail" Keyboard="Email" FontSize="Small" BackgroundColor="White" Margin="5,0,0,-8.5"/>
        </Border>

        <!-- Password Entry with Show Password Button -->
        <Border Stroke="#8A2BE2" StrokeThickness="1"  Padding="0" HeightRequest="40" Margin="0,10,0,30">
            <Grid>
                <Entry x:Name="PasswordEntry" Text="" Grid.Column="0" Placeholder="Password" IsPassword="True"
                           FontSize="Small" BackgroundColor="White" Margin="5,0,0,-8.5"/>
                <Button Grid.Column="1" Text="Show" FontSize="Small" BackgroundColor="Transparent"
                             HorizontalOptions="End" Clicked="OnShowButtonPressed"/>
            </Grid>
        </Border>

        <!-- Terms and Conditions Checkbox and Label -->
        <StackLayout Orientation="Horizontal" VerticalOptions="Fill" Spacing="10">
            <CheckBox  Color="#8A2BE2" x:Name="ConditionTextBox"/>
            <Label Text="I agree with the TnC and Privacy Policy" FontSize="Small" Margin="-10,10,0,0"/>
        </StackLayout>

        <!-- Sign In Button -->
        <Button Text="Sign In" BackgroundColor="#8A2BE2" TextColor="White" CornerRadius="5" HeightRequest="50" Clicked="LogInClicked" />

        <Label Text="" TextColor="Red" x:Name="ErrorMessage" HorizontalOptions="CenterAndExpand" VerticalOptions="Start" FontSize="16" FontFamily="epilogue" FontAttributes="None" Margin="0,30,0,0"/>
    </StackLayout>

</ContentPage>