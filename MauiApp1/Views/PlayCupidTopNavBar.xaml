<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp1.Views.PlayCupidTopNavBar">

    
    
    <StackLayout Orientation="Horizontal"
                     HorizontalOptions="Center"
                     Spacing="10"
                     Margin="10">
        <Button Text="Members"
                    
                    BackgroundColor="#E8E8E8"
                    TextColor="#4A4A4A"
                    CornerRadius="20"
                    WidthRequest="110"
                    HeightRequest="40"
                    FontAttributes="Bold"
                Clicked="OnMemberClicked"/>
        <Button Text="Invite others"
                    BackgroundColor="#E8E8E8"
                    TextColor="#4A4A4A"
                    CornerRadius="20"
                    WidthRequest="110"
                    HeightRequest="40"
                    FontAttributes="Bold"
                Clicked="OnInviteClicked"/>
        <Button Text="Matched pairs"
                    BackgroundColor="#E8E8E8"
                    TextColor="#4A4A4A"
                    CornerRadius="20"
                    WidthRequest="110"
                    HeightRequest="40"
                    FontAttributes="Bold"
                />
    </StackLayout>

</ContentView>