<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://schemas.microsoft.com/dotnet/2021/maui/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:views="clr-namespace:MauiApp1.Views"
             xmlns:local="clr-namespace:MauiApp1.Views"
             mc:Ignorable="d"
             x:Class="MauiApp1.PlayCupidInvitePage">
    
    <!-- Main Layout Container -->
    <VerticalStackLayout  VerticalOptions="Fill">

        <!-- Top Bar Container -->
        <Grid 
           ColumnDefinitions="*,Auto,Auto"
           RowDefinitions="Auto">
            <Label Text="HeartSync"
                   Margin="20,0,50,0"
                   ></Label>
            <Image Grid.Column="1"
                Source="notification_icon.png"
                HeightRequest="30"
                WidthRequest="30"
                   Margin="10,0,5,0"
                VerticalOptions="Center" />
            <Image Grid.Column="2"
                Source="profile_placeholder.png"
                HeightRequest="30"
                WidthRequest="30"
                    Margin="10,0,30,0"
                VerticalOptions="Center" />
        </Grid>

        <!-- Title and Subtitle -->
        <Label Text="Play Cupid"
            FontSize="24"
            FontAttributes="None"
            HorizontalTextAlignment="Start"
            Margin="20,0,50,0" />
        <Label Text="Do you know your friends? Match your friends!"
            HorizontalTextAlignment="Start"
            Margin="20,0,50,0" />

        <!-- Navigation Buttons -->
        <views:PlayCupidTopNavBar />

        <!-- Container for the link and copy button -->
        <Grid ColumnDefinitions="Auto, Auto" Margin="20,0,0,0">
            
            <Entry Grid.Column="0" Text="https://www.example.com/lorem_ipsum" 
                   FontSize="15"  BackgroundColor="LightGray" 
                  x:Name="appLink"
                   IsReadOnly="True" 
                   HorizontalOptions="CenterAndExpand"
                   VerticalOptions="CenterAndExpand"/>
            <!-- Make it read-only if the link shouldn't be editable -->

            <ImageButton Grid.Column="1" Source="copy_icon.png" BackgroundColor="Transparent" HorizontalOptions="Start" HeightRequest="20" WidthRequest="20" Clicked="OnCopyClicked"/>

        </Grid>

        <!-- Share Button -->
        <Button Text="Share"
            BackgroundColor="#8023EB"
            TextColor="White"
            CornerRadius="10"
            Margin="0,10,0,0"
                WidthRequest="143"
                HeightRequest="44"
            HorizontalOptions="Center"
                Clicked="OnShareClicked"
             />
        
